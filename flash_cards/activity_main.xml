<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<TextView
    android:id="@+id/flashcard_question"
    android:background="@drawable/card_background"
    android:elevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="80dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="39dp"
    android:padding="10dp"
    android:gravity="center"
    android:text="Who is the 44th President of the United States?"
    android:textColor="@color/teal_200"
    android:textSize="40sp" />

<TextView
    android:id="@+id/flashcard_answer"
    android:visibility="invisible"
    android:background="@drawable/answer_background"
    android:elevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="80dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="39dp"
    android:padding="10dp"
    android:gravity="center"
    android:text="Barrack Obama"
    android:textColor="@color/teal_200"
    android:textSize="40sp" />

    <TextView
        android:id="@+id/firstChoice"
        android:background="@color/black"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="39dp"
        android:layout_below="@id/flashcard_question"
        android:padding="10dp"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textColor="@color/teal_200"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/secondChoice"
        android:background="@color/black"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="39dp"
        android:layout_below="@id/firstChoice"
        android:padding="10dp"
        android:gravity="center"
        android:text="George H. W. Bush"
        android:textColor="@color/teal_200"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/thirdChoice"
        android:background="@color/black"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="39dp"
        android:layout_below="@id/secondChoice"
        android:padding="10dp"
        android:gravity="center"
        android:text="Barrack Obama"
        android:textColor="@color/teal_200"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/toggle_visibility"
        android:src="@drawable/icon_visible"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/thirdChoice"
        android:layout_centerHorizontal="true"
      />

    <ImageView
        android:id="@+id/toggle_invisibility"
        android:src="@drawable/icon_invisible"
        android:visibility="invisible"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/thirdChoice"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/add"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_below="@+id/toggle_visibility"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/toggle_visibility"
        android:src="@drawable/icon_add"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="86dp"
        android:layout_height="80dp"
        android:layout_below="@+id/toggle_visibility"
        android:layout_marginTop="24dp"
        android:layout_marginRight="79dp"
        android:layout_toLeftOf="@id/toggle_visibility"
        android:src="@drawable/ic_next"
        android:visibility="visible" />

</RelativeLayout>
